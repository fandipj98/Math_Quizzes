<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".GameActivity">

    <Button
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="355dp"
        android:layout_marginRight="355dp"
        android:layout_marginBottom="675dp"
        android:background="@drawable/back_button"
        android:onClick="mainMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level X"
        android:textColor="#FAF6F6"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textColor="#FAF6F6"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/text_qNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textColor="#FAF6F6"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/text_qNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="#FAF6F6"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/text_qNum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#FAF6F6"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textColor="#FAF6F6"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="200dp" />

    <Button
        android:id="@+id/button_answer1"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:background="@drawable/level_button"
        android:onClick="clickAnswer1"
        android:textAllCaps="false"
        android:text="Answer 1"
        android:textSize="21sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="380dp" />

    <Button
        android:id="@+id/button_answer2"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:background="@drawable/level_button"
        android:onClick="clickAnswer2"
        android:textAllCaps="false"
        android:text="Answer 2"
        android:textSize="21sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="460dp" />

    <Button
        android:id="@+id/button_answer3"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:background="@drawable/level_button"
        android:onClick="clickAnswer3"
        android:textAllCaps="false"
        android:text="Answer 3"
        android:textSize="21sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="540dp" />

    <Button
        android:id="@+id/button_answer4"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:background="@drawable/level_button"
        android:onClick="clickAnswer4"
        android:textAllCaps="false"
        android:text="Answer 4"
        android:textSize="21sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="620dp" />

</androidx.constraintlayout.widget.ConstraintLayout>